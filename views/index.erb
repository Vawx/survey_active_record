<div class="container">
  <div class="col-lg-12 col-md-12">
    <form class="" action="/switch_survey" method="">
      <% if @surveys.length > 0 %>
        <select class="" name="select_survey" id="select_survey">
          <% @surveys.each do |sur| %>
            <option value="<%=sur.id%>"><%=sur.name%></option>
          <%end%>
        </select>
      <button type="submit" class="btn btn-default" name="button">Select</button>
      <%end%>
    </form>
  </div>
</div>

<div class="container" style="padding-top:20px;">
  <div class="col-lg-12 col-md-12">
    <% if @questions.length > 0 %>
      <div class="well">
          <% @questions.each do |q| %>
            <form class="" action="/update_question/<%=q.id%>/<%=@current_survey.id%>" method="post">
              <div class="">
                <input name="_method" type="hidden" value="patch">
                <input type="text" size="100" name="update_name" value="" placeholder="<% if q.question.length > 0%> <%=q.question%> <%else%>...<%end%>">
                <button type="submit" class='btn btn-default' name="button">Update</button>
              </div>
            </form>
            <form class="" action="/delete_question/<%=q.id%>/<%if @current_survey.class != NilClass%><%=@current_survey.id%><%else%>-1<%end%>" method="post">
              <input name="_method" type="hidden" value="delete">
              <button type="submit" class="btn btn-danger" name="button">x</button>
            </form>
          <%end%>
      </div>
    <%end%>
    <div class="container">
      <% if @current_survey.class != NilClass %>
        <form class="" action="/ask_user/<%=@current_survey.id%>" method="post">

        </form>
      <%end%>
    </div>
  </div>
</div>
